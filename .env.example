# Application Environment
NODE_ENV=production

# Backend Server
APP_PORT=5081

# Frontend Server
FRONTEND_PORT=8080

# PostgreSQL Database
SQL_SERVER_IP=db
SQL_SERVER_PORT=5432
SQL_DB=inventory_db
SQL_USER=inventory_user
SQL_PASS=change_me_to_secure_password

# File Uploads
UPLOAD_DIR=/app/data/uploads

# OpenAI Integration (optional)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# JWT Configuration
# Generate a secure random string for JWT_SECRET (at least 32 characters)
# Example: openssl rand -hex 64
JWT_SECRET=change_me_to_very_long_random_secret_at_least_32_characters
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Configuration (SMTP)
# For Gmail: Enable 2FA and create App Password at https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=Your App Name <noreply@yourdomain.com>
FRONTEND_URL=https://yourdomain.com

# Email Verification & Password Reset
EMAIL_VERIFICATION_EXPIRY=24h
PASSWORD_RESET_EXPIRY=1h
